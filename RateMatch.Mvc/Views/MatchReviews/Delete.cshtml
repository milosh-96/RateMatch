@using RateMatch.Mvc.Data;
@model MatchReview

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2><i class="text-danger fa-solid fa-exclamation-triangle"></i> @ViewData["Title"]</h2>
        <p>Are you sure you want to delete this review?</p>
        <hr />
        <form asp-route-id="@Model.Id"  method="POST">
            <button class="btn btn-secondary" type="submit">Delete</button>
            <a
                asp-route-id="@Model.MatchId"
                asp-action="Details" 
                asp-controller="SportsMatches" 
                class="btn btn-primary">Cancel</a>
        </form>
    </div>
</div>